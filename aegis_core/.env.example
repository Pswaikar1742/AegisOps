# ── AegisOps environment variables ──
# Copy to .env and fill in real values.

FASTRTR_API_KEY=your-fastrouter-api-key-here
FASTRTR_BASE_URL=https://go.fastrouter.ai/api/v1
FASTRTR_MODEL=anthropic/claude-sonnet-4-20250514
LOG_TRUNCATE_CHARS=2000

# Ollama local fallback (used automatically when FastRouter fails)
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=llama3

TARGET_CONTAINER=buggy-app-v2
HEALTH_URL=http://buggy-app-v2:8000/health

VERIFY_DELAY_SECS=5
VERIFY_RETRIES=3
HEALTH_TIMEOUT_SECS=5
